{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Gela",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.gela",
				"match": "\\b(let|var|in|if|else|then)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.gela",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.gela",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.gela"
}